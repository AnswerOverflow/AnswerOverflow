{
	"name": "convex-monorepo",
	"private": true,
	"scripts": {
		"i": "bun install",
		"ci": "bun run lint && bun run typecheck && bun run test",
		"dev": "bun run dev:dbs && bun run dev:no-dbs",
		"dev:dbs": "bun scripts/start-dbs.ts",
		"dev:no-dbs": "turbo run dev",
		"build": "turbo run build",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"lint": "biome check . && eslint .",
		"lint:eslint": "eslint . --cache",
		"lint:fix": "biome check . --write",
		"fix:safe": "biome check . --write",
		"fix:unsafe": "biome check . --write --unsafe",
		"clean": "turbo run clean && rm -rf node_modules .turbo",
		"format": "biome format --write .",
		"knip": "bunx knip",
		"ngrok": "bun scripts/start-ngrok.ts",
		"prepare": "husky",
		"env:pull:prod": "vercel env pull .env.production --environment production"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@eslint/js": "^9.39.1",
		"@types/bytes": "^3.1.5",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"@typescript-eslint/utils": "^8.47.0",
		"eslint": "^9.39.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"sharp": "^0.34.5",
		"turbo": "^2.6.1",
		"typescript": "catalog:",
		"typescript-eslint": "^8.47.0"
	},
	"engines": {
		"node": ">=18.8.0"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"effect": "^3.19.3",
			"@effect/platform": "^0.93.0",
			"@effect/vitest": "^0.25.0",
			"@effect/language-service": "^0.56.0",
			"convex": "^1.29.1",
			"better-auth": "1.3.27",
			"@convex-dev/better-auth": "^0.9.7",
			"@convex-dev/react-query": "^0.0.0-alpha.11",
			"@tanstack/react-query": "^5.90.7",
			"react": "^19.1.1",
			"react-dom": "^19.1.1",
			"next": "^16.0.0",
			"vitest": "^3.2.4",
			"tailwindcss": "^4.1.11",
			"@tailwindcss/postcss": "^4.1.11",
			"typescript": "^5.9.2",
			"nuqs": "2.7.3",
			"@edge-runtime/vm": "^5.0.0",
			"@types/node": "^20.19.9",
			"@types/react": "^19.1.9",
			"@types/react-dom": "^19.1.7",
			"lucide-react": "^0.553.0",
			"postcss": "^8.5.3"
		}
	},
	"packageManager": "bun@1.3.3",
	"patchedDependencies": {
		"discord-markdown-parser@1.2.0": "patches/discord-markdown-parser@1.2.0.patch"
	},
	"dependencies": {
		"@better-auth/stripe": "^1.4.2",
		"better-auth": "1.3.27",
		"stripe": "^20"
	},
	"lint-staged": {
		"*": [
			"biome format --write"
		]
	}
}
