{
	"name": "convex-monorepo",
	"private": true,
	"scripts": {
		"dev": "bun run dev:dbs && bun run dev:no-dbs",
		"dev:dbs": "bun scripts/start-dbs.ts",
		"dev:no-dbs": "turbo run dev",
		"build": "turbo run build",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"fix:safe": "biome check . --write",
		"fix:unsafe": "biome check . --write --unsafe",
		"clean": "turbo run clean && rm -rf node_modules .turbo",
		"format": "biome format --write .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"turbo": "^2.6.0",
		"typescript": "catalog:"
	},
	"engines": {
		"node": ">=18.8.0"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"effect": "^3.19.3",
			"@effect/platform": "^0.93.0",
			"convex": "^1.29.0",
			"better-auth": "1.3.27",
			"@convex-dev/better-auth": "^0.9.7",
			"@convex-dev/react-query": "^0.0.0-alpha.11",
			"@tanstack/react-query": "^5.90.7",
			"react": "^19.1.1",
			"react-dom": "^19.1.1",
			"next": "^16.0.0",
			"vitest": "^3.2.4",
			"tailwindcss": "^4.1.11",
			"@tailwindcss/postcss": "^4.1.11",
			"typescript": "^5.9.2",
			"zod": "^4.1.12",
			"nuqs": "2.7.3"
		}
	},
	"packageManager": "bun@1.3.2",
	"dependencies": {
		"better-auth": "1.3.27"
	},
	"lint-staged": {
		"*": [
			"biome format --write"
		]
	}
}
