{
	"name": "convex-monorepo",
	"private": true,
	"scripts": {
		"i": "bun install",
		"setup:context": "bun scripts/setup-context.ts",
		"ci": "bun run lint && bun run typecheck && bun run test",
		"dev": "turbo run dev",
		"dev:with:dbs": "bun scripts/start-dbs.ts && turbo run dev",
		"build": "turbo run build",
		"typecheck": "turbo run typecheck --filter='!@packages/convex-test' --filter='!@packages/agent'",
		"typecheck:slow": "turbo run typecheck:slow --filter='!@packages/convex-test'",
		"typecheck:tsgo": "tsgo --build",
		"typecheck:tsgo:watch": "tsgo --build --watch",
		"test": "turbo run test --filter='!@packages/convex-test'",
		"test:watch": "turbo run test:watch --filter='!@packages/convex-test'",
		"test:metadata": "bun scripts/metadata-tests.ts",
		"test:metadata:update": "bun scripts/metadata-tests.ts --update-snapshots",
		"test:metadata:strict": "bun scripts/metadata-tests.ts --strict",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"fix:safe": "biome check . --write",
		"fix:unsafe": "biome check . --write --unsafe",
		"clean": "turbo run clean && rm -rf node_modules .turbo",
		"format": "biome format --write .",
		"knip": "bunx knip",
		"ngrok": "bun scripts/start-ngrok.ts",
		"stripe:listen": "bash -c 'export $(grep ^NEXT_PUBLIC_CONVEX_SITE_URL .env | xargs) && stripe listen --forward-to $NEXT_PUBLIC_CONVEX_SITE_URL/stripe/webhook'",
		"prepare": "husky",
		"env:pull:prod": "vercel env pull .env.production --environment production"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@types/bytes": "^3.1.5",
		"@typescript/native-preview": "^7.0.0-dev.20260102.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"octokit": "^5.0.5",
		"sharp": "^0.34.5",
		"turbo": "^2.6.1",
		"typescript": "catalog:"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"effect": "^3.19.8",
			"@effect/platform": "^0.93.6",
			"@effect/platform-node": "^0.103.0",
			"@effect/platform-bun": "^0.87.0",
			"@effect/cluster": "^0.55.0",
			"@effect/vitest": "^0.25.0",
			"@effect/language-service": "^0.56.0",
			"convex": "^1.31.2",
			"better-auth": "^1.4.7",
			"@convex-dev/better-auth": "^0.10.6",
			"@convex-dev/react-query": "^0.0.0-alpha.11",
			"@tanstack/react-query": "^5.90.7",
			"react": "^19.1.1",
			"react-dom": "^19.1.1",
			"next": "^16.1.1-canary.5",
			"vitest": "^3.2.4",
			"tailwindcss": "^4.1.11",
			"@tailwindcss/postcss": "^4.1.11",
			"typescript": "^5.9.2",
			"nuqs": "2.7.3",
			"@edge-runtime/vm": "^5.0.0",
			"ai": "^6.0.0",
			"@ai-sdk/provider": "^3.0.0",
			"@ai-sdk/provider-utils": "^4.0.0",
			"@ai-sdk/openai": "^3.0.0",
			"@ai-sdk/anthropic": "^3.0.0",
			"@types/node": "^20.19.9",
			"@types/react": "^19.1.9",
			"@types/react-dom": "^19.1.7",
			"lucide-react": "^0.553.0",
			"postcss": "^8.5.3",
			"zod": "^3.25.76"
		}
	},
	"packageManager": "bun@1.3.3",
	"patchedDependencies": {
		"discord-markdown-parser@1.2.0": "patches/discord-markdown-parser@1.2.0.patch",
		"convex-helpers@0.1.104": "patches/convex-helpers@0.1.104.patch",
		"@convex-dev/better-auth@0.10.9": "patches/@convex-dev%2Fbetter-auth@0.10.9.patch",
		"@mintlify/cli@4.0.859": "patches/@mintlify+cli@4.0.859.patch"
	},
	"overrides": {
		"@modelcontextprotocol/sdk": "1.17.5",
		"import-in-the-middle": "^2.0.0",
		"require-in-the-middle": "^8.0.1",
		"effect": "^3.19.8",
		"@effect/platform": "^0.93.6"
	},
	"dependencies": {
		"@better-auth/stripe": "^1.4.7",
		"ai": "^6.0.6",
		"jsdom": "^27.3.0",
		"main-site": "^7.4.2",
		"react-tweet": "^3.3.0",
		"stripe": "^20.1.0"
	},
	"lint-staged": {
		"*": [
			"biome format --write"
		]
	}
}
