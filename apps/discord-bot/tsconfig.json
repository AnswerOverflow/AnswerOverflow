{
  "extends": "@sapphire/ts-config",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "preserve",
    "baseUrl": "src",
    "rootDir": "./src",
    "jsx": "react",
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@primitives/*": [
        "primitives/*"
      ],
      "@interaction-handlers/*": [
        "interaction-handlers/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@trpc/*": [
        "trpc/*"
      ]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist"
  ]
}
