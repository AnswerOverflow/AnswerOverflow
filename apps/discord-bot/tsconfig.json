{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"skipLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"@utils/*": ["utils/*"],
			"@primitives/*": ["primitives/*"],
			"@interaction-handlers/*": ["interaction-handlers/*"],
		},
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
