{
  "extends": "@answeroverflow/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "paths": {
      "~utils/*": [
        "utils/*"
      ],
      "~listeners": [
        "listeners/*"
      ],
      "~primitives/*": [
        "primitives/*"
      ],
      "~interaction-handlers/*": [
        "interaction-handlers/*"
      ],
      "~components/*": [
        "components/*"
      ],
      "~test/*": [
        "../test/*"
      ]
    },
  },
  "include": [
    "src",
    "test",
    "vitest.config.ts",
    "../../node_modules/@answeroverflow/auth/next-auth.d.ts"
  ],
}
