{
	"name": "@answeroverflow/main-site",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"with-env": "dotenv -e ../../.env --",
		"dev": "yarn with-env next dev",
		"build": "yarn with-env next build",
		"clean": "rm -rf .next .turbo node_modules",
		"start": "yarn run with-env next start",
		"format": "prettier --ignore-path ../../.gitignore --config ./prettierrc.cjs --write .",
		"format:check": "prettier --ignore-path ../../.gitignore --config ./prettierrc.cjs --check .",
		"lint": "next lint && tsc --noEmit",
		"lint:fix": "next lint --fix",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@answeroverflow/analytics": "*",
		"@answeroverflow/api": "*",
		"@answeroverflow/auth": "*",
		"@answeroverflow/db": "*",
		"@answeroverflow/hooks": "*",
		"@answeroverflow/tailwind-config": "*",
		"@answeroverflow/ui": "*",
		"@mdx-js/loader": "^2.3.0",
		"@mdx-js/react": "^2.3.0",
		"@next/font": "^13.1.2",
		"@next/mdx": "^13.2.4",
		"@sentry/nextjs": "^7.45.0",
		"@tanstack/react-query": "^4.19.0",
		"@tanstack/react-query-devtools": "^4.26.1",
		"@trpc/client": "^10.4.3",
		"@trpc/next": "^10.19.1",
		"@trpc/react-query": "^10.4.3",
		"@trpc/server": "^10.4.3",
		"core-js": "^3.29.1",
		"next": "^13.3.0",
		"next-auth": "^4.20.1",
		"node-fetch": "^3.3.1",
		"raw-body": "^2.5.2",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-fast-marquee": "^1.3.5",
		"sharp": "^0.32.0",
		"superjson": "^1.9.1",
		"zod": "^3.20.6"
	},
	"devDependencies": {
		"@answeroverflow/eslint-config-custom": "*",
		"@answeroverflow/tsconfig": "*",
		"@types/core-js": "^2.5.5",
		"@types/node": "^18.14.2",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"autoprefixer": "^10.4.13",
		"dotenv-cli": "^7.1.0",
		"eslint": "^8.29.0",
		"eslint-config-next": "13.2.4",
		"postcss": "^8.4.19",
		"sass": "^1.59.3",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.9.4"
	}
}
