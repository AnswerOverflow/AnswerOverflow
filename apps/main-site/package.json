{
	"name": "@answeroverflow/main-site",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"with-env": "dotenv -e ../../.env --",
		"dev-next": "pnpm with-env next dev",
		"dev-content-layer": "pnpm with-env contentlayer dev --clearCache",
		"dev": "pnpm concurrently \"pnpm dev-content-layer\" \"pnpm dev-next\"",
		"build:content-layer": "pnpm with-env contentlayer build  --clearCache",
		"build": "pnpm build:content-layer && pnpm with-env next build",
		"clean": "rm -rf .next .turbo .contentlayer node_modules",
		"start": "pnpm with-env next start",
		"format": "prettier --ignore-path ../../.gitignore --config .prettierrc.cjs --write .",
		"format:check": "prettier --ignore-path ../../.gitignore --config .prettierrc.cjs --check .",
		"lint": "rm -rf .next && pnpm with-env next lint && tsc --noEmit",
		"lint:fix": "pnpm with-env next lint --fix",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@answeroverflow/api": "workspace:^",
		"@answeroverflow/auth": "workspace:^",
		"@answeroverflow/constants": "workspace:^",
		"@answeroverflow/db": "workspace:^",
		"@answeroverflow/env": "workspace:^",
		"@answeroverflow/tailwind-config": "workspace:^",
		"@answeroverflow/ui": "workspace:^",
		"@mdx-js/loader": "^2.3.0",
		"@mdx-js/react": "^2.3.0",
		"@next/mdx": "^13.4.19",
		"@tailwindcss/typography": "^0.5.10",
		"@trpc/server": "^10.37.1",
		"bright": "^0.8.4",
		"contentlayer": "^0.3.4",
		"mdx": "^0.3.1",
		"next": "14.1.0",
		"next-auth": "^4.23.1",
		"next-contentlayer": "^0.3.4",
		"next-themes": "^0.2.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-fast-marquee": "^1.6.0",
		"react-icons": "^4.10.1",
		"react-social-icons": "^6.14.0",
		"react-xarrows": "^2.0.2",
		"sharp": "^0.32.5",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@answeroverflow/eslint-config-custom": "workspace:^",
		"@answeroverflow/prettier-config": "workspace:^",
		"@answeroverflow/tsconfig": "workspace:^",
		"@edge-runtime/vm": "^2.1.2",
		"@types/mdx": "^2.0.8",
		"@types/node": "^20.11.20",
		"@types/react": "^18.2.20",
		"@types/react-dom": "^18.2.7",
		"@vitest/coverage-c8": "^0.30.1",
		"autoprefixer": "^10.4.15",
		"concurrently": "^8.2.2",
		"dotenv-cli": "^7.3.0",
		"eslint": "^8.47.0",
		"eslint-config-next": "14.1.0",
		"postcss": "^8.4.28",
		"prettier": "^2.8.8",
		"sass": "^1.66.1",
		"tailwindcss": "^3.3.3",
		"vitest": "^0.30.1"
	}
}
