{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"codegen": {
			"cache": true
		},
		"build": {
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"],
			"dependsOn": ["^build", "codegen"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["codegen"]
		},
		"clean": {
			"cache": false
		},
		"typecheck": {
			"cache": true,
			"dependsOn": ["codegen"]
		},
		"test": {
			"cache": true,
			"dependsOn": ["codegen"]
		},
		"lint": {
			"dependsOn": ["codegen"]
		}
	}
}
