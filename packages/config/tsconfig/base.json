{
	"$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/tsconfig.json",
	"display": "Default",
	"compileOnSave": true,
	"compilerOptions": {
		"composite": false,
    "declaration": false,
    "declarationMap": false,
		"inlineSources": false,
		"isolatedModules": true,
		"preserveWatchOutput": true,

		"allowJs": true,
		"noEmit": true,
		"types": ["node"],
		"jsx": "preserve",
		"noUncheckedIndexedAccess": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"incremental": true,
		"tsBuildInfoFile": ".tsbuildinfo",
		"lib": ["esnext"],
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"newLine": "lf",
		"noEmitHelpers": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"preserveConstEnums": true,
		"pretty": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"disableSizeLimit": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
		"useDefineForClassFields": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"exactOptionalPropertyTypes": false,
		"noImplicitOverride": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"~discord-bot/utils/*": ["./apps/discord-bot/src/utils/*"],
			"~discord-bot/domains/*": ["./apps/discord-bot/src/domains/*"],
			"~discord-bot/listeners": ["./apps/discord-bot/src/listeners/*"],
			"~discord-bot/primitives/*": ["./apps/discord-bot/src/primitives/*"],
			"~discord-bot/interaction-handlers/*": [
				"./apps/discord-bot/src/interaction-handlers/*"
			],
			"~discord-bot/components/*": ["./apps/discord-bot/src/components/*"],
			"~discord-bot/test/*": ["./apps/discord-bot/test/*"],
			"~api/router/*": ["./packages/api/src/router/*"],
			"~api/test/*": ["./packages/api/test/*"],
			"~api/utils/*": ["./packages/api/src/utils/*"]
		}
	},
	"exclude": ["dist", "node_modules"]
}
