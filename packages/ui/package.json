{
	"name": "@answeroverflow/ui",
	"version": "0.1.0",
	"private": true,
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"scripts": {
		"format": "prettier --ignore-path ../../.gitignore --config ./prettierrc.cjs --write .",
		"format:check": "prettier --ignore-path ../../.gitignore --config ./prettierrc.cjs --check .",
		"lint": "next lint && tsc --noEmit",
		"lint:fix": "next lint --fix",
		"dev": "cross-env THEME=\"both\" storybook dev -p 6006 --quiet --no-open",
		"test:ui:dark:no-serve": "npx wait-on tcp:6006 && cross-env THEME=\"dark\" test-storybook --maxWorkers=2 --url=http://localhost:6006",
		"test:ui:dark": "cross-env THEME=\"dark\" storybook build --quiet -o storybook-static-dark && npx concurrently -k -s first -n \"SB,DARK\" -c \"magenta,blue\" \"npx http-server storybook-static-dark --port 6006 --silent\" \"yarn test:ui:dark:no-serve\"",
		"test:ui:light:no-serve": "npx wait-on tcp:6007 && test-storybook --maxWorkers=2 --url=http://localhost:6007",
		"test:ui:light": "cross-env THEME=\"light\" storybook build --quiet -o storybook-static-light && npx concurrently -k -s first -n \"SB,LIGHT\" -c \"magenta,blue\" \"npx http-server storybook-static-light --port 6007 --silent\" \"yarn test:ui:light:no-serve\"",
		"test": "yarn test:ui:dark && yarn test:ui:light",
		"build": "storybook build --quiet",
		"storybook": "yarn dev",
		"build-storybook": "storybook build public",
		"clean": "rm -rf .next storybook-static* node_modules"
	},
	"dependencies": {
		"@answeroverflow/api": "*",
		"@answeroverflow/hooks": "*",
		"@heroicons/react": "^2.0.13",
		"@next/font": "^13.1.2",
		"@radix-ui/react-alert-dialog": "^1.0.3",
		"@radix-ui/react-avatar": "^1.0.2",
		"@radix-ui/react-dropdown-menu": "^2.0.4",
		"@radix-ui/react-label": "^2.0.1",
		"@radix-ui/react-menubar": "^1.0.2",
		"@radix-ui/react-navigation-menu": "^1.1.2",
		"@radix-ui/react-popover": "^1.0.5",
		"bootstrap-icons": "^1.10.4",
		"clsx": "^1.2.1",
		"cva": "npm:class-variance-authority",
		"discord-markdown": "^2.5.1",
		"gsap": "^3.11.4",
		"highlight.js": "^11.7.0",
		"next": "13.3.0",
		"react-use": "^17.4.0",
		"react-use-measure": "^2.1.1",
		"react-wrap-balancer": "^0.4.0",
		"react-xarrows": "^2.0.2",
		"recharts": "^2.3.2",
		"style-loader": "^3.3.1",
		"tailwind-merge": "^1.10.0",
		"tailwindcss-animate": "^1.0.5",
		"typescript": "^4.9.4",
		"zod": "^3.20.6"
	},
	"devDependencies": {
		"@answeroverflow/db": "*",
		"@answeroverflow/prettier-config": "*",
		"@answeroverflow/tailwind-config": "*",
		"@answeroverflow/tsconfig": "*",
		"@babel/core": "^7.20.5",
		"@storybook/addon-a11y": "^7.0.0-beta.54",
		"@storybook/addon-actions": "^7.0.0-beta.54",
		"@storybook/addon-essentials": "^7.0.5",
		"@storybook/addon-interactions": "^7.0.0-beta.54",
		"@storybook/addon-links": "^7.0.0-beta.54",
		"@storybook/addon-mdx-gfm": "^7.0.0-beta.54",
		"@storybook/addon-postcss": "^2.0.0",
		"@storybook/addon-toolbars": "7.0.0-beta.54",
		"@storybook/addons": "^7.0.0",
		"@storybook/client-api": "^7.0.0-beta.54",
		"@storybook/jest": "^0.0.11--canary.22.2783ae7.0",
		"@storybook/nextjs": "^7.0.5",
		"@storybook/preview-web": "^7.0.0-beta.54",
		"@storybook/react": "^7.0.0-beta.54",
		"@storybook/test-runner": "^0.10.0--canary.210.8666bd0.0",
		"@storybook/testing-library": "^0.0.14--canary.30.5f44d14.0",
		"@storybook/testing-react": "^2.0.0-next.0",
		"@storybook/types": "7.0.5",
		"@types/node": "^18.14.2",
		"@types/react": "^18.0.14",
		"@types/react-dom": "^18.0.5",
		"autoprefixer": "^10.4.7",
		"axe-playwright": "^1.1.12",
		"babel-loader": "^8.3.0",
		"cross-env": "^7.0.3",
		"css-loader": "^6.7.3",
		"jest": "^29.4.1",
		"postcss": "^8.4.14",
		"postcss-loader": "^7.0.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"require-from-string": "^2.0.2",
		"storybook": "^7.0.0-beta.54",
		"tailwindcss": "^3.2.0",
		"tslib": "^2.4.1",
		"type-fest": "^3.5.5",
		"wait-on": "^7.0.1",
		"webpack": "^5.76.0"
	},
	"ct3aMetadata": {
		"initVersion": "6.11.0"
	}
}
