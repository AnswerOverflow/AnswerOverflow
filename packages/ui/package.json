{
	"name": "@answeroverflow/ui",
	"version": "0.1.0",
	"private": true,
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"scripts": {
		"format": "prettier --ignore-path ../../.gitignore --config ./prettierrc.cjs --write .",
		"format:check": "prettier --ignore-path ../../.gitignore --config ./prettierrc.cjs --check .",
		"lint": "next lint && tsc --noEmit",
		"lint:fix": "next lint --fix",
		"dev": "cross-env THEME=\"both\" ladle dev -p 6006",
		"test:ui:dark:no-serve": "npx wait-on http://127.0.0.1:6006 && cross-env THEME=\"dark\" test-storybook --maxWorkers=2 --url=http://127.0.0.1:6006",
		"test:ui:dark": "cross-env THEME=\"dark\" storybook build --quiet -o storybook-static-dark && npx concurrently -k -s first -n \"SB,DARK\" -c \"magenta,blue\" \"npx http-server storybook-static-dark --port 6006 --silent\" \"yarn test:ui:dark:no-serve\"",
		"test:ui:light:no-serve": "npx wait-on http://127.0.0.1:6007 && test-storybook --maxWorkers=2 --url=http://127.0.0.1:6007",
		"test:ui:light": "cross-env THEME=\"light\" storybook build --quiet -o storybook-static-light && npx concurrently -k -s first -n \"SB,LIGHT\" -c \"magenta,blue\" \"npx http-server storybook-static-light --port 6007 --silent\" \"yarn test:ui:light:no-serve\"",
		"test": "yarn test:ui:dark && yarn test:ui:light",
		"build": "storybook build --quiet",
		"storybook": "yarn dev",
		"build-storybook": "storybook build public",
		"clean": "rm -rf .next storybook-static* node_modules"
	},
	"dependencies": {
		"@answeroverflow/api": "*",
		"@answeroverflow/hooks": "*",
		"@heroicons/react": "^2.0.13",
		"@next/font": "^13.4.7",
		"@radix-ui/react-avatar": "^1.0.2",
		"@radix-ui/react-dropdown-menu": "^2.0.5",
		"@radix-ui/react-label": "^2.0.1",
		"@radix-ui/react-menubar": "^1.0.2",
		"@radix-ui/react-navigation-menu": "^1.1.2",
		"@radix-ui/react-popover": "^1.0.5",
		"@trpc/client": "^10.25.0",
		"@trpc/react-query": "^10.25.0",
		"@trpc/server": "^10.25.0",
		"clsx": "^1.2.1",
		"cva": "npm:class-variance-authority",
		"discord-markdown": "^2.5.1",
		"highlight.js": "^11.7.0",
		"next": "^13.4.1",
		"next-themes": "^0.2.1",
		"react-grid-gallery": "^1.0.0",
		"react-icons": "^4.10.1",
		"react-social-icons": "^5.15.0",
		"react-spring": "^9.7.1",
		"react-toastify": "^9.1.2",
		"react-use": "^17.4.0",
		"react-wrap-balancer": "^0.4.1",
		"react-xarrows": "^2.0.2",
		"recharts": "^2.3.2",
		"tailwind-merge": "^1.10.0",
		"yet-another-react-lightbox": "^3.5.4",
		"zod": "^3.20.6"
	},
	"devDependencies": {
		"@answeroverflow/db": "*",
		"@answeroverflow/prettier-config": "*",
		"@answeroverflow/tailwind-config": "*",
		"@answeroverflow/tsconfig": "*",
		"@ladle/react": "^2.15.0",
		"@types/node": "^18.14.2",
		"@types/react": "^18.0.14",
		"@types/react-dom": "^18.2.4",
		"@vitejs/plugin-react-swc": "^3.3.2",
		"autoprefixer": "^10.4.7",
		"cross-env": "^7.0.3",
		"jest": "^29.4.1",
		"postcss": "^8.4.24",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwindcss": "^3.2.0",
		"type-fest": "^3.5.5",
		"vite-tsconfig-paths": "^4.2.0",
		"wait-on": "^7.0.1"
	},
	"ct3aMetadata": {
		"initVersion": "6.11.0"
	}
}
