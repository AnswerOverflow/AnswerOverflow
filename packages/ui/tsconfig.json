{
  "extends": "@answeroverflow/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "../../",
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ],
  },
  "include": [
    "next-env.d.ts",
    "test",
    "next.config.mjs",
    "../../reset.d.ts",
    "postcss.config.cjs",
    "tailwind.config.cjs",
    "src",
    ".ladle",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules"
  ]
}
