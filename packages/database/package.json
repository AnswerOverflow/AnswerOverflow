{
	"name": "@packages/database",
	"version": "1.0.0",
	"exports": {
		"./*": "./src/*.ts",
		"./convex/shared/*": "./convex/shared/*.ts",
		"./convex/*": {
			"types": "./convex/*.d.js",
			"default": "./convex/*.js"
		}
	},
	"scripts": {
		"with-env": "bun run --env-file=../../.env",
		"codegen": "bunx convex codegen",
		"dev": "convex dev",
		"typecheck": "tsc -p convex/tsconfig.json --noEmit & tsc -p tsconfig.json --noEmit & wait",
		"clean": "rm -rf node_modules .turbo",
		"test": "vitest run --no-watch",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@convex-dev/action-cache": "^0.3.0",
		"@convex-dev/better-auth": "catalog:",
		"@effect/platform": "catalog:",
		"@packages/analytics": "workspace:*",
		"convex": "catalog:",
		"convex-helpers": "^0.1.104",
		"effect": "catalog:",
		"openai": "^4.45.0"
	},
	"devDependencies": {
		"@edge-runtime/vm": "^5.0.0",
		"@effect/vitest": "^0.25.0",
		"@packages/convex-test": "workspace:*",
		"@packages/observability": "workspace:*",
		"vitest": "catalog:"
	}
}
