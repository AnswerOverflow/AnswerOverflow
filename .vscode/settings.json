{
	"files.exclude": {
		// "**/.context": true,
		"**/_generated": true,
		"**/.turbo": true,
		"**/.next": true,
		"**/dist": true
	},
	"search.exclude": {
		"**/.context": true,
		"**/_generated": true,
		"**/.turbo": true,
		"**/.next": true,
		"**/dist": true,
		"**/node_modules": true
	},
	"files.watcherExclude": {
		"**/.context/**": true,
		"**/_generated/**": true,
		"**/.turbo/**": true,
		"**/.next/**": true,
		"**/dist/**": true,
		"**/node_modules/**": true
	},
	"typescript.preferences.excludePackageJsonAutoImports": "on",
	"typescript.tsserver.experimental.enableProjectDiagnostics": false,
	"tailwindCSS.experimental.configFile": "packages/ui/src/styles/globals.css",
	"typescript.tsdk": "node_modules/typescript/lib",
	"eslint.run": "onSave",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "never"
	}
}
